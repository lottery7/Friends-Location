<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_chats_gradient_background"
    android:orientation="vertical"
    tools:context=".AllChats">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="9dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Chats"
            android:textColor="#f8709a"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:background="@drawable/search_box_bg"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_user_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Search user"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <ImageButton
                android:id="@+id/all_chats_cancel_search_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginEnd="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_cancel_24"
                android:visibility="gone"
                app:tint="@color/white" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_chats_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar_ll">

        <androidx.cardview.widget.CardView
            android:id="@+id/all_chats_no_messages"
            android:layout_width="280dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="@dimen/cardview_default_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New conversations await!"
                    android:textColor="#909090"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_bar_ll"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/main_menu"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/events_imgbtn"
            android:layout_width="10dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/main_menu"
            android:onClick="goToEvents"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/calendar" />

        <ImageButton
            android:id="@+id/chats_imgbtn"
            android:layout_width="10dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/main_menu"
            android:onClick="goToChats"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/chat" />

        <ImageButton
            android:id="@+id/map_imgbtn"
            android:layout_width="10dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/main_menu"
            android:onClick="goToMap"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/map" />

        <ImageButton
            android:id="@+id/friends_imgbtn"
            android:layout_width="10dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/main_menu"
            android:onClick="goToFriends"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/friends" />

        <ImageButton
            android:id="@+id/setting_imgbtn"
            android:layout_width="10dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/main_menu"
            android:onClick="goToSetting"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/setting" />

    </LinearLayout>


</LinearLayout>