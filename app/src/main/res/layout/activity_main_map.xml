<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMap">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MapsActivity" />

    <LinearLayout
        android:id="@+id/bottom_bar_ll"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/main_menu"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/events_imgbtn"
            android:layout_width="10dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/main_menu"
            android:onClick="goToEvents"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/calendar" />

        <ImageButton
            android:id="@+id/chats_imgbtn"
            android:layout_width="10dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/main_menu"
            android:onClick="goToChats"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/chat" />

        <ImageButton
            android:id="@+id/map_imgbtn"
            android:layout_width="10dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/main_menu"
            android:onClick="goToMap"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/map" />

        <ImageButton
            android:id="@+id/friends_imgbtn"
            android:layout_width="10dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/main_menu"
            android:onClick="goToFriends"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/friends" />

        <ImageButton
            android:id="@+id/setting_imgbtn"
            android:layout_width="10dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/main_menu"
            android:onClick="goToSetting"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/setting" />

    </LinearLayout>

    <Button
        android:id="@+id/select_place_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="acceptPlace"
        android:text="Select Place"
        android:backgroundTint="#F92C85"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>