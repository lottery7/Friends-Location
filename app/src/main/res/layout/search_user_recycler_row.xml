<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingVertical="8dp"
    android:paddingHorizontal="15dp">

    <include
        android:id="@+id/search_user_row_profile_pic"
        layout="@layout/profile_picture_view" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_user_row_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4sp"
            android:text="Username"
            android:textColor="@color/light_dark_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/search_user_row_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example@mail.com"
            android:textColor="@color/light_dark_text"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>