<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_height">56dp</item>
        <item name="itemIconSize">38dp</item>
        <item name="itemPaddingTop">2dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavActiveTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavInactiveTextStyle</item>
    </style>

    <style name="BottomNavActiveTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavInactiveTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:focusedMonthDateColor">@color/gray_60</item>
        <item name="android:navigationBarColor">@color/gray_60</item>
        <item name="colorAccent">@color/muted_cyan</item>
        <item name="android:textColorPrimary">@color/gray_60</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:textColor">@color/gray_60</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/gray_60</item>
    </style>







</resources>
